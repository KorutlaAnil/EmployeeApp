@model EmployeeApp.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" class="form-control">

</textarea>

                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input type="date" asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>



                        <label asp-for="Joindate" class="control-label"></label>
                        <input asp-for="Joindate" class="form-control" />
                        <span asp-validation-for="Joindate" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group  col-md-6">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option value="0">Select</option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <label class="form-check-label">Role</label>

                    @foreach (var item in ViewBag.roles as List<Role>)
                    {
                        <div class="form-check-inline">
                            <label class="form-check-label" for="@item.RoleId">
                                <input class="form-check-input" id="@item.RoleId" type="radio" asp-for="RoleId" value="@item.RoleId" />@item.RoleName
                            </label>
                            </div>
                            }

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <div class="row">
                                    @foreach (var skill in ViewBag.Skills as List<Skill>)
                                    {
                                        <div class="col-sm-1">
                                            <input type="checkbox" name="skills" value="@skill.SkillId" /> @skill.SkillName
                                        </div>
                                    }

                                </div>

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group  col-md-6">
                                <select name="Hobbies" id="multidropdowm" class="form-control" multiple="multiple">
                                    @foreach (var hobby in ViewBag.Hobbies as List<Hobby>)
                                    {
                                        <option value="@hobby.HobbyId">@hobby.HobbyName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group  col-md-12">
                                <label asp-for="About" class="control-label"></label>
                                <input asp-for="About" class="form-control" />
                                <span asp-validation-for="About" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
</form>
        </div>
    </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>


    @section Scripts {
        <script>
            $(function () {
                $("#multidropdown").chosen();
            });
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
